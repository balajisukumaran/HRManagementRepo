             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HR_PresentationLayer"
             mc:Ignorable="d" 
             Loaded="UserControl_Loaded"  d:DesignHeight="659.5" d:DesignWidth="1296" Background="White" Foreground="Black">
    <Grid>
        <Label x:Name="label" Content="User Id" HorizontalAlignment="Left" Margin="408,114,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Username" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="408,164,0,0"/>
        <Label x:Name="label2" Content="Password" HorizontalAlignment="Left" Margin="408,218,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label3" Content="Firstname" HorizontalAlignment="Left" Margin="408,270,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label4" Content="Lastname" HorizontalAlignment="Left" Margin="411,320,0,0" VerticalAlignment="Top"/>
        <TextBlock x:Name="txtUserId" Width="100" HorizontalAlignment="Left" Margin="571,124,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top"/>
