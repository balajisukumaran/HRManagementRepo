        <Button x:Name="btnUdate" Click="btnUdate_Click" Content="Update" HorizontalAlignment="Left" Margin="981,180,0,0" VerticalAlignment="Top" Width="84"/>
        <ComboBox x:Name="lsSearch" HorizontalAlignment="Left" Height="34" Margin="965,377,0,0" VerticalAlignment="Top" Width="100" />
        <DataGrid x:Name="dgRecords" HorizontalAlignment="Left" Margin="411,413,0,0" VerticalAlignment="Top" Width="285" Height="140"/>

